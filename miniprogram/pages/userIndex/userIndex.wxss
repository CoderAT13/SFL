/**index.wxss**/
page{
  background-color: rgb(53, 167, 196);
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}
.colorBall{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: white;
  display: inline-block;
  position: relative;
}
#red{
  background-color: red;
  z-index: -1;
}
#yellow{
  background-color: yellow;
  z-index: -1;
}
#green{
  background-color: green;
  z-index: -1;
}
#blue{
  background-color: blue;
  z-index: -1;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 20rpx white;
}

.userinfo-nickname {
  color: white;
}

.userinfo-point{
  font-size: 30rpx;
}

.usermotto {
  margin-top: 200px;
}